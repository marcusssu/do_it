<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp">



    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:background="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="4dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="time"
        android:id="@+id/timeView"
        android:layout_below="@+id/tvNoteTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="5dp"
        android:textColor="#ffc6c6c6"
        android:textStyle="italic"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvNote"
            android:textColor="#ff383838"


            android:layout_gravity="left|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNTITLE"
            android:id="@+id/tvNoteTitle"
            android:textColor="#ff000000"
            android:textStyle="bold"

            android:layout_marginTop="69dp"
            android:layout_gravity="center_horizontal|bottom" />

    </FrameLayout>

</RelativeLayout><!-- From: file:/Users/marcussu/Desktop/do_it/app/src/main/res/layout/note_list_item.xml -->